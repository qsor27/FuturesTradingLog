# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=your-secret-key-here
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Network Configuration
# For local access only: HOST_IP=127.0.0.1
# For network access: HOST_IP=192.168.1.100 (your computer's IP)
# For all interfaces: HOST_IP=0.0.0.0
HOST_IP=0.0.0.0
EXTERNAL_PORT=5000

# Data Directory Configuration
# Examples:
# Windows: DATA_DIR=C:/FuturesTradingLog/data
# Linux/Mac: DATA_DIR=/home/user/FuturesTradingLog/data
# Docker: DATA_DIR=/app/data (set automatically in compose)
DATA_DIR=./data

# Database Configuration (relative to DATA_DIR)
DB_NAME=futures_trades.db

# Redis Configuration
# Docker with redis service: REDIS_URL=redis://redis:6379/0
# Windows/Mac host Redis: REDIS_URL=redis://host.docker.internal:6379/0
# Local development: REDIS_URL=redis://localhost:6379/0
# Disable caching: Set CACHE_ENABLED=false
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true
CACHE_TTL_DAYS=14

# Discord Notifications (Optional)
# Get webhook URL from: Discord Server Settings → Integrations → Webhooks
# Leave empty to disable Discord notifications
# See docs/DISCORD_NOTIFICATIONS_SETUP.md for full setup guide
DISCORD_WEBHOOK_URL=

# NinjaTrader Auto-Import
# Enable automatic CSV import from DATA_DIR
AUTO_IMPORT_ENABLED=true
# Check for new files every N seconds (default: 300 = 5 minutes)
AUTO_IMPORT_INTERVAL=300
