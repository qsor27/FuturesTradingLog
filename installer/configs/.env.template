# FuturesTradingLog Environment Configuration
# This file is created during installation and can be customized

# Application Settings
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_SECRET_KEY={{GENERATED_SECRET_KEY}}

# Data Directory (configured during installation)
DATA_DIR={{INSTALL_DATA_DIR}}

# Database Configuration
DATABASE_URL=sqlite:///{{INSTALL_DATA_DIR}}/db/futures_trades_clean.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true
CACHE_TTL_DAYS=14
REDIS_MAX_CONNECTIONS=50

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Auto Import Settings
AUTO_IMPORT_ENABLED=true
AUTO_IMPORT_INTERVAL=300
FILE_WATCHER_ENABLED=true

# Gap Filling Service
GAP_FILLING_ENABLED=true
GAP_FILLING_INTERVAL=3600
GAP_FILLING_MAX_DAYS=30

# Cache Maintenance
CACHE_MAINTENANCE_ENABLED=true
CACHE_MAINTENANCE_INTERVAL=86400

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_ROTATION_SIZE=10485760
LOG_BACKUP_COUNT=5

# API Settings
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60

# Session Settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=604800

# Security
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600

# External Services
YFINANCE_ENABLED=true
YFINANCE_RATE_LIMIT=1

# Monitoring
PROMETHEUS_ENABLED=true
HEALTH_CHECK_ENABLED=true
